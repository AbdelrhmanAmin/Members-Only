<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <% if user_signed_in? %>
        <th>Author</th>
      <%end%>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <% @posts.each do |post| %>
      <tr>
        <%if user_signed_in? %>
          <td><strong><%= post.user.name %></strong></td>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <%else%>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
